{{> layout/header }}

<div class="bg-light py-5">
    <div class="container">
        <div class="row">
            <!-- 왼쪽 메뉴 -->
            <div class="col-md-3 mb-4" style="width: 20%">
                <div class="border rounded-3 bg-white p-3 shadow-sm">
                    <p class="fs-6 fw-bold mb-3">채용 관리</p>
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">모든 지원자</a>
                        </li>
                        <hr/>
                        <li class="nav-item"><a class="nav-link" href="#">서류 접수</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">서류 검토중</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">서류 합격</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">탈락</a></li>
                        <hr/>
                        <li class="nav-item"><a class="nav-link" href="#">채용 확정</a></li>
                    </ul>
                </div>
            </div>

            <!-- 오른쪽 내용 -->
            <div class="col-md-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="fs-4 fw-bold">{{model.jobTitle}}</div>
                    <a href="/job/{{model.jobId}}" class="btn btn-primary">공고 상세보기</a>
                </div>

                <!-- 흰 네모박스 -->
                <div class="border rounded bg-white p-5 text-start" style="height: auto">

                    {{#model.applications}}
                        <div class="list-group" style="height: 50%; margin: 1rem">
                            <a href="#" class="list-group-item list-group-item-action">
                                <div class="d-flex weapp-prj" style="justify-content: space-between">
                                    <div class="d-flex align-items-center">
                                        <div class="weapp-pimg">
                                            <img src="/images/default-profile.png" alt="지원자 사진"
                                                 style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover;">
                                        </div>
                                        <div class="weapp-company">
                                            <div class="fs-5 fw-bold" style="margin: 1rem">{{username}}</div>
                                            <div class="fs-6 fw-nomal" style="margin: 1rem">{{resumeTitle}}</div>
                                            <div class="text-muted" style="margin: 1rem">{{careerLevel}}</div>
                                        </div>
                                    </div>
                                    <div class="text-end" style="padding: 1rem;">
                                        <div class="text-muted" style="font-size: 0.9rem;">{{createdAt}}</div>
                                        <!-- 지원 상태 badge 표시 -->
                                        <div class="mt-2">
                                            {{#isAccepted}}
                                                <span class="badge bg-success">{{status}}</span>
                                            {{/isAccepted}}
                                            {{#isRejected}}
                                                <span class="badge bg-danger">{{status}}</span>
                                            {{/isRejected}}
                                            <div class="mt-2">
                                            <!--                                                {{#isAccepted}}-->
                                                <!--                                                    <span class="badge bg-success">{{status}}</span>-->
                                                    <!--                                                {{/isAccepted}}-->
                                                    <!--                                                {{#isRejected}}-->
                                                <!--                                                    <span class="badge bg-danger">{{status}}</span>-->
                                                    <!--                                                {{/isRejected}}-->
                                                {{#isPending}}
                                                    <span class="badge bg-secondary">{{status}}</span>
                                                {{/isPending}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/model.applications}}

                    {{^model.applications}}
                        <div class="text-center text-muted py-5">
                            지원자가 없습니다.
                        </div>
                    {{/model.applications}}

                </div>
                <!-- 흰 네모박스 끝 -->
            </div>
        </div>
    </div>
</div>

{{> layout/footer }}
